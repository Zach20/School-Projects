                            <img src="/Images/Home/personView3.png" alt="..." class="img-thumbnail">
                        </div>
                    </div>
                </section>*@
            </div>
        </section>



        <section id="whereBewander">
            <div class="container text-center">
                <div class="row">
                    <div class="col-12">
                        <h1 class="whereBewander-title">Where will you wander next?</h1>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        @if (!Request.IsAuthenticated)
                        {
                            <p><a href='@Url.Action("Login", "Account")' class="btn btn-success">Start today</a></p>
                        }
                        else
                        {
                            <p><a href='@Url.Action("ProfilePage", "Users", new { userID = User.Identity.GetUserId() }, null)' class="btn btn-success">Start today</a></p>
                        }
                    </div>
                </div>
            </div>
        </section>

    </div>




















