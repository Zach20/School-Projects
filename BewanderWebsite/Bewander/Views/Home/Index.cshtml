<div>
    @using Microsoft.AspNet.Identity

    <div class="bckHome">
        <header id="header-home">
            <!--            <h1 class="header-home-title">bewander</h1>-->
            <div class="container">
                <div class="row">
                    <div class="col-12 bewanderLogo">
                        <img src="/Images/Home/logo.png" id="logoimage" class="img-fluid" alt="Responsive image" width="80%">
                    </div>
                    <div class="col-12">
                        <!--                        <h1 class="header-home-title">A community of travelers, <br>sharing the best experiences &amp; places.</h1>-->
                        <h1 class="header-home-title">Join us and <span class="typer" data-delay="150" data-words="wander,explore,review" data-colors="#6DDBDB"></span><span class="cursor" data-owner="first-typer"></span></h1>

                    </div>
                    <div class="col-12 header-home-btn">
                        @if (!Request.IsAuthenticated)
                        {
                            <a href='@Url.Action("Login", "Account")' class="bttn btn-ghost hidden-xs-down">Sign In</a>
                        }
                        else
                        {
                            <a href='@Url.Action("ProfilePage", "Users", new { userID = User.Identity.GetUserId() }, null)' class="bttn btn-ghost hidden-xs-down">Sign Up</a>
                        }
                        @*<p><button type="button" id="learnBtn" class="btn btn-success scroll-to-learnMore hidden-sm-up">Learn more</button></p>
                            @if (!Request.IsAuthenticated)
                            {
                                <p><a href='@Url.Action("Register", "Account")' class="btn btn-success hidden-sm-up">Sign Up</a></p>
                            }
                            else
                            {
                                <p><a href='@Url.Action("ProfilePage", "Users", new { userID = User.Identity.GetUserId() }, null)' class="btn btn-success hidden-sm-up">Sign Up</a></p>
                            }*@
                    </div>
                </div>
            </div>
        </header>


        <section>
            <div class="container learnMore" id="learnMore">
                <div class="row">

                    <div class="col-12">
                        <h1 class="community">Our Community</h1>
                    </div>

                    <div class="col-12 text-center">
                        <p class="long-copy">A community of travelers, sharing the best experiences &amp; places.</p>
                    </div>

                    <div class="row bewander-cards">
                        <div class="col-12 col-md-4 bar text-center">
                            <!-- Card -->
                            <article class="card animated fadeInLeft">
                                <img class="card-img-top img-responsive" src="/Images/Home/signUp.png" alt="Sign In" />
                                <div class="card-block">
                                    <h4 class="card-title">Sign Up</h4>
                                    <p class="card-text">Sign up and see what your fellow wanderers are saying before you take off on your next adventure! Read reviews, find hidden gems, search for locals and let Bewander help you experience a city like never before!</p>
                                    @if (!Request.IsAuthenticated)
                                    {
                                        <a href='@Url.Action("Login", "Account")' class="btn btn-outline-success">Start today</a>
                                    }
                                    else
                                    {
                                        <a href='@Url.Action("ProfilePage", "Users", new { userID = User.Identity.GetUserId() }, null)' class="btn btn-outline-success">Start now</a>
                                    }

                                </div>
                            </article><!-- .end Card -->
                        </div>

                        <div class="col-12 col-md-4 bar text-center">
                            <!-- Card -->
                            <article class="card animated fadeInLeft">
                                <img class="card-img-top img-responsive" src="/Images/Home/travelWorld.png" alt="Travel the World" />
                                <div class="card-block">
                                    <h4 class="card-title">Travel</h4>
                                    <p class="card-text">Go beyond the photographs online or in magazines, and explore our big, beautiful world! See the things you've always wanted to see, and some you didn't know you needed to. Have Fun, Meet Locals, Create Memories.</p>
                                    <a class="btn btn-outline-success" href='@Url.Action("Index", "Reviews")'>Start traveling</a>
                                </div>
                            </article><!-- .end Card -->
                        </div>

                        <div class="col-12 col-md-4 bar text-center">
                            <!-- Card -->
                            <article class="card animated fadeInLeft">
                                <img class="card-img-top img-responsive" src="/Images/Home/review.png" alt="Review" />
                                <div class="card-block">
                                    <h4 class="card-title">Review</h4>
                                    <p class="card-text">Get the scoop on where to eat like a local in Lisbon. Find the secret spot in Croatia for perfect, uncrowded paradise views. Discover the best chocolate in Belgium. Share your experiences with your fellow Bewanders!</p>
                                    <a class="btn btn-outline-success" href='@Url.Action("Create", "Reviews")'>Discover places</a>
                                </div>
                            </article><!-- .end Card -->
                        </div>
                    </div><!--/row-->

                </div>
            </div>
        </section>


        <section id="explore">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <h1 class="seeWorld">Explore Hidden Places</h1>
                    </div>
                </div>
                <!-- Browser imgs -->
                <section class="section-meals hidden-sm-down">
                    <ul class="meals-showcase clearfix">
                        <li>
                            <figure class="meal-photo">
                                <img src="/Images/Home/food.png" alt="Korean bibimbap with egg and vegetables">
                            </figure>
                        </li>
                        <li>
                            <figure class="meal-photo">
                                <img src="/Images/Home/compass.png" alt="Simple italian pizza with cherry tomatoes">
                            </figure>
                        </li>
                        <li>
                            <figure class="meal-photo">
                                <img src="/Images/Home/insidePlane.png" alt="Chicken breast steak with vegetables">
                            </figure>
                        </li>
                        <li>
                            <figure class="meal-photo">
                                <img src="/Images/Home/china.png" alt="Autumn pumpkin soup">
                            </figure>
                        </li>
                    </ul>
                    <ul class="meals-showcase clearfix">
                        <li>
                            <figure class="meal-photo">
                                <img src="/Images/Home/food2.png" alt="Paleo beef steak with vegetables">
                            </figure>
                        </li>
                        <li>
                            <figure class="meal-photo">
                                <img src="/Images/Home/personView5.png" alt="Healthy baguette with egg and vegetables">
                            </figure>
                        </li>
                        <li>
                            <figure class="meal-photo">
                                <img src="/Images/Home/groupCoffee.png" alt="Burger with cheddar and bacon">
                            </figure>
                        </li>
                        <li>
                            <figure class="meal-photo">
                                <img src="/Images/Home/map.png" alt="Granola with cherries and strawberries">
                            </figure>
                        </li>
                    </ul>
                </section>

                <!-- Mobile imgs -->
